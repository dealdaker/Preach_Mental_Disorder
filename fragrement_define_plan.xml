<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/login_bg"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivBack"
                android:src="@drawable/ic_back"
                android:padding="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:padding="@dimen/_15sdp"
                android:textSize="@dimen/_16sdp"
                android:textColor="@color/colorWhite"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvCurrentDate"
            android:text="31 Jan, 2021"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

       <LinearLayout
           android:orientation="vertical"
           android:layout_width="@dimen/_270sdp"
           android:layout_gravity="center"
           android:background="@drawable/eden_rounded_background"
           android:layout_marginTop="@dimen/_40sdp"
           android:padding="@dimen/_15sdp"
           android:layout_height="wrap_content">
           <TextView
               android:text="Assalamoalaikum, Faizan Lets to give extra sadaqah(charity) today and brighten"
               android:textSize="@dimen/_16sdp"
               android:textStyle="bold"
               android:textColor="@color/colorWhite"
               android:textAlignment="center"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:text="@string/hadith"
               android:textSize="@dimen/_12sdp"
               android:textColor="@color/colorWhite"
               android:textAlignment="center"
               android:layout_marginTop="@dimen/_10sdp"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
           <TextView
               android:text="Sahih Bukhari"
               android:textSize="@dimen/_8sdp"
               android:textColor="@color/colorWhite"
               android:textAlignment="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/white_rounded_background"
            android:layout_width="@dimen/_270sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_height="wrap_content">
            <TextView
                android:text="Today's Goals"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <View
                android:background="@color/colorHintText"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_height="1dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Prayers "
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rlFajar"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_checkbox_color_gray"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp">

                        <TextView
                            android:id="@+id/tvFajar"
                            android:text="F"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivClickTrueFajar"
                            android:src="@drawable/ic_click_true"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <CheckBox
                            android:id="@+id/cbFajar"
                            android:checked="false"
                            android:button="@drawable/eden_rounded_checkbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlZuhar"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_checkbox_color_gray"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp">

                        <TextView
                            android:id="@+id/tvZuhar"
                            android:text="Z"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivClickTrueZuhar"
                            android:src="@drawable/ic_click_true"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <CheckBox
                            android:id="@+id/cbZuhar"
                            android:checked="false"
                            android:button="@drawable/eden_rounded_checkbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlAsar"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_checkbox_color_gray"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp">

                        <TextView
                            android:id="@+id/tvAsar"
                            android:text="A"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivClickTrueAsar"
                            android:src="@drawable/ic_click_true"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <CheckBox
                            android:id="@+id/cbAsar"
                            android:checked="false"
                            android:button="@drawable/eden_rounded_checkbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlMaghrib"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_checkbox_color_gray"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp">

                        <TextView
                            android:id="@+id/tvMaghrib"
                            android:text="M"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivClickTrueMaghrib"
                            android:src="@drawable/ic_click_true"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <CheckBox
                            android:id="@+id/cbMaghrib"
                            android:checked="false"
                            android:button="@drawable/eden_rounded_checkbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/rlIsha"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_checkbox_color_gray"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp">

                        <TextView
                            android:id="@+id/tvIsha"
                            android:text="I"
                            android:textSize="@dimen/_8sdp"
                            android:textColor="@color/colorWhite"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/ivClickTrueIsha"
                            android:src="@drawable/ic_click_true"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <CheckBox
                            android:id="@+id/cbIsha"
                            android:checked="false"
                            android:button="@drawable/eden_rounded_checkbox_background"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>


                </LinearLayout>
                <TextView
                    android:id="@+id/tvPrayerCount"
                    android:text="0"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text=" out of 5"
                    android:layout_gravity="center"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Quran"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"/>
               <ImageView
                   android:src="@drawable/progress_bar"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
                <TextView
                    android:text="Golas of 20 Ayats"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Duas"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"/>
               <ImageView
                   android:src="@drawable/progress_bar"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"/>
                <TextView
                    android:text="Golas of 20 Duas"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvAllProgress"
                android:layout_marginTop="@dimen/_20sdp"
                android:text="View all progress"
                android:layout_marginBottom="@dimen/_15sdp"
                android:textAlignment="viewEnd"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
</LinearLayout>